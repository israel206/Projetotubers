{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    // extens√µes do prettier
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    // plugins do prettier
    "plugins": [
        "react",
        "prettier"
    ],
    // regras do prettier
    "rules": {
        "prettier/prettier":"error"
    }
}
